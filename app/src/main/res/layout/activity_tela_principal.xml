<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.samuel.bancosangue.TelaPrincipal"
    android:background="#78909C">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Hospital:"
        android:id="@+id/textView"
        android:layout_above="@+id/editText"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:singleLine="true"
        android:state_window_focused="false"
        android:layout_above="@+id/textView2"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Paciente:"
        android:id="@+id/textView2"
        android:layout_above="@+id/editText2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:singleLine="true"
        android:layout_above="@+id/textView4"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastro de Pedidos de Doação"
        android:id="@+id/textView3"
        android:textSize="24dp"
        style="@style/Base.AlertDialog.AppCompat.Light"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Tipo Sanguíneo:"
        android:id="@+id/textView4"
        android:layout_above="@+id/spinner"
        android:layout_alignParentStart="true" />

        <Spinner

        android:id="@+id/spinner"
            android:layout_width="fill_parent"
        android:layout_height="wrap_content"
            android:padding="1dp"
            style="@android:style/Widget.Material.Spinner"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:duplicateParentState="true"
            android:dropDownWidth="wrap_content"
            android:spinnerMode="dropdown" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar Pedido"
        android:id="@+id/button"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Ver Lista de Pedidos"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

